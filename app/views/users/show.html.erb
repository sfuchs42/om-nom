 <div class="nom-box">
  <div class="row">
    <div class="col-4">
      <%= image_tag 'user.png' %>
    </div>

    <div class="col-8">
      <h1><%= @user.email %></h1>
      <h3>Member Since <%= @user.created_at.strftime("%B %d '%y") %></h3>
      <h4><%= @user.comments.count %> total comments</h4>
      <h4><%= @user.comments.where(rating: "5 stars").count %> total 5 star reviews</h4>
    </div>  
  </div>
  <div class="clear"></div>
</div>